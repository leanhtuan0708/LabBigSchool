@model IEnumerable<LabBigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}

<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="data">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class=" lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
                <button data-course-id="@course.Id" class="btn btn-default btn-sm is-toggle-attendance">Going?</button>
            </div>
        </li>
    }
</ul>
